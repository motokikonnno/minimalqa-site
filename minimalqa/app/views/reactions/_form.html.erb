<%= form_with(model: reaction, url: answer_reactions_path(@reaction.answer.id), local: true) do |form| %>
  <%= form.hidden_field :user_id, value: current_user.id %>
    <div class="mb-3">
      <%= form.label :body, "内容（300字以内）", class: "form-label" %>
      <%= form.text_area :body, class: "form-control form-control-lg", rows: "7" %>
    </div>
    <div class="d-grid gap-2 col-lg mx-auto mb-3">
      <%= form.submit "作成", class: "btn btn-success" %>
    </div>
<% end %>
